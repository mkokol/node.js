block content
  body
    div.container
      h1 test Contact View
      a#create-new-company-btn.btn.btn-small(type="button", data-toggle="modal")
        i.icon-plus-sign
        |Create New Company

      table#companies.table.table-bordered.table-condensed
        thead
          tr
            th name
            th street
            th number
            th city
            th zipcode
            th website
            th options

    div#modal-wnd.modal.hidden